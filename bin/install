#!/bin/bash

if [ "$1" == "--force" ]; then
  rm -rf "$HOME/.vim"
fi

cp -rf home/. $HOME

cd $HOME

mkdir -p .vim/autoload .vim/bundle && curl -LSso .vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim

PWD=`pwd`

cd .vim/bundle

git config --global init.templatedir '~/.git-templates'

git clone https://github.com/VundleVim/Vundle.vim

cd $PWD
